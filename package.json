{
	"name": "@weiran.zsd/prepub",
	"version": "0.0.8",
	"description": "A tool to help finding potential problems before publish.",
	"keywords": [
		"npm",
		"prepublish",
		"cli"
	],
	"license": "MIT",
	"author": {
		"name": "weiran",
		"email": "weiran.zsd@outlook.com",
		"url": "https://github.com/aladdin-add"
	},
	"repository": {
		"type": "https",
		"url": "https://github.com/weiran-zsd/prepub"
	},
	"type": "module",
	"bin": {
		"prepub": "index.js"
	},
	"files": [
		"index.js",
		"utils/",
		"lib/"
	],
	"scripts": {
		"format": "prettier --write \"./**/*.{js,json}\"",
		"lint": "eslint .",
		"test": "node tests/lib/index.js",
		"release": "npm run lint && npm run test && standard-version",
		"prepare": "husky install",
		"prepublishOnly": "node index.js"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": "latest"
		},
		"extends": [
			"eslint:recommended",
			"plugin:node/recommended"
		]
	},
	"dependencies": {
		"cli-alerts": "^1.2.2",
		"cli-handle-unhandled": "^1.1.1",
		"cli-meow-help": "^2.0.2",
		"cli-welcome": "^2.2.2",
		"globby": "^11.0.4",
		"meow": "^10.0.1",
		"shelljs": "^0.8.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"eslint": "^7.30.0",
		"eslint-plugin-node": "^11.1.0",
		"husky": "^6.0.0",
		"standard-version": "^9.3.0"
	},
	"engines": {
		"node": ">=12.22.0"
	}
}
